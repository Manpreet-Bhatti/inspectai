{
    "name": "inspectai",
    "version": "0.1.0",
    "private": true,
    "packageManager": "pnpm@10.24.0",
    "scripts": {
        "dev": "turbo dev",
        "build": "turbo build",
        "lint": "turbo lint",
        "test": "turbo test",
        "test:e2e": "turbo test:e2e",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "db:push": "pnpm --filter @inspectai/database db:push",
        "db:generate": "pnpm --filter @inspectai/database db:generate",
        "db:studio": "pnpm --filter @inspectai/database db:studio",
        "db:migrate": "pnpm --filter @inspectai/database db:migrate",
        "db:migrate:deploy": "pnpm --filter @inspectai/database db:migrate:deploy",
        "db:seed": "pnpm --filter @inspectai/database db:seed",
        "db:reset": "pnpm --filter @inspectai/database db:reset",
        "clean": "turbo clean && rm -rf node_modules"
    },
    "devDependencies": {
        "@types/node": "^24.10.1",
        "prettier": "^3.7.4",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "turbo": "^2.6.2",
        "typescript": "^5.9.3"
    },
    "engines": {
        "node": ">=22.0.0"
    }
}